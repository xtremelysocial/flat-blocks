{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"title": "Default - System & Style Script",
	"settings": {
		"typography": {
			"fontSizes": [
				{
					"slug": "extra-small",
					"size": "14px",
					"name": "Extra Small"
				},
				{
					"slug": "small",
					"size": "16px",
					"name": "Small"
				},
				{
					"slug": "normal",
					"size": "18px",
					"name": "Normal"
				},
				{
					"slug": "medium",
					"size": "23px /*22px*/",
					"name": "Medium (h4)"
				},
				{
					"slug": "large",
					"size": "min(31px, 7vw) /*min(28px, 6vw)*/",
					"name": "Large (h3)"
				},
				{
					"slug": "larger",
					"size": "min(42px, 9vw) /*min(34px, 8vw)*/",
					"name": "Larger (h2)"
				},
				{
					"slug": "x-large",
					"size": "min(52px, 11vw) /*min(48px, 11vw)*/",
					"name": "Extra Large (h1)"
				},
				{
					"slug": "huge",
					"size": "min(58px, 13vw) /*min(54px, 13vw)*/",
					"name": "Huge"
				},
				{
					"slug": "gigantic",
					"size": "min(64px, 15vw)",
					"name": "Gigantic"
				}
			]
		}
	},
	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system-font)"
		},
		"blocks": {
			"core/heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--style-script)"
				}
			}
		},
		"elements": {
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--style-script)"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--style-script)"
				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--style-script)"
				}
			},
			"h4": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--style-script)"
				}
			},
			"h5": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--style-script)"
				}
			},
			"h6": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--style-script)"
				}
			}
		}
	}
}