{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"title": "Default w/Blue Links",
	"styles": {
		"blocks": {
			"core/site-title": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--primary)"
						}
					}
				}
			}
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--blue)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--primary-alt)"
					}
				},
				":focus": {
					"color": {
						"text": "var(--wp--preset--color--primary-alt)"
					}
				}
			}
		}
	}
}