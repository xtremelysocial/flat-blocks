{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "System & Style Script",
	"settings": {
		"typography": {
			"fontSizes": [
				{
					"slug": "extra-small",
					"size": "14px",
					"name": "Extra Small",
					"fluid": false
				},
				{
					"slug": "small",
					"size": "16px",
					"name": "Small",
					"fluid": false
				},
				{
					"slug": "normal",
					"size": "18px",
					"name": "Normal",
					"fluid": false
				},
				{
					"slug": "medium",
					"size": "22px",
			 		"name": "Medium (h5)",
					"fluid": false
				},
				{
					"slug": "large",
					"size": "28px",
					"name": "Large (h4)",
					"fluid": {
						"min": "24px",
						"max": "28px"
					}
				},
				{
					"slug": "x-large",
					"size": "34px",
					"name": "Extra Large (h3)",
					"fluid": {
						"min": "30px",
						"max": "34px"
					}
				},
				{
					"slug": "xx-large",
					"size": "48px",
					"name": "2X Large (h2)",
					"fluid": {
						"min": "36px",
						"max": "48px"
					}
				},
				{
					"slug": "huge",
					"size": "54px",
					"name": "Huge (h1)",
					"fluid": {
						"min": "42px",
						"max": "54px"
					}
				},
				{
					"slug": "gigantic",
					"size": "64px",
					"name": "Gigantic",
					"fluid": {
						"min": "52px",
						"max": "64px"
					}
				}
			]
		}
	},
	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system-font)"
		},
		"blocks": {
			"core/heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--style-script)"
				}
			}
		},
		"elements": {
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--style-script)"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--huge)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},			
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"textTransform": "none"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)",
					"textTransform": "none"
				}
			}			
		}
	}
}