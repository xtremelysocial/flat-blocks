{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "System & Style Script - Uppercase Nav",
	"settings": {
		"typography": {
			"fontSizes": [
				{
					"slug": "small",
					"size": "16px",
					"name": "Small"
				},
				{
					"slug": "normal",
					"size": "18px",
					"name": "Normal"
				},
				{
					"slug": "medium",
					"size": "22px",
			 		"name": "Medium (h5)"
				},
				{
					"slug": "large",
					"size": "28px",
					"name": "Large (h4)",
					"fluid": {
						"min": "24px",
						"max": "28px"
					}
				},
				{
					"slug": "x-large",
					"size": "34px",
					"name": "Extra Large (h3)",
					"fluid": {
						"min": "30px",
						"max": "34px"
					}
				},
				{
					"slug": "xx-large",
					"size": "48px",
					"name": "2X Large (h2)",
					"fluid": {
						"min": "36px",
						"max": "48px"
					}
				},
				{
					"slug": "xxx-large",
					"size": "54px",
					"name": "3X Large (h1)",
					"fluid": {
						"min": "42px",
						"max": "54px"
					}
				},
				{
					"slug": "xxxx-large",
					"size": "clamp(52px, 14vw, 64px)",
					"name": "4X Large"
				}
			]
		}
	},
	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system-font)"
		},
		"blocks": {
			"core/heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--style-script)"
				}
			},
			"core/navigation": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-font)",
					"textTransform": "uppercase"
				}
			},
			"core/home-link": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-font)",
					"textTransform": "uppercase"
				}
			},
			"core/navigation-link": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-font)",
					"textTransform": "uppercase"
				}
			}
		},
		"elements": {
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--style-script)"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xxx-large)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},			
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"textTransform": "none"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)",
					"textTransform": "none"
				}
			}			
		}
	}
}