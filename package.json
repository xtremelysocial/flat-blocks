{
	"name": "flat-blocks-pro",
	"version": "1.0.0",
	"description": "Flat Blocks PRO Theme",
	"author": "XtremelySocial",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"Flat",
		"Blocks",
		"PRO",
		"theme"
	],
	"files": [
		"assets/*",
		"!*/.DS_Store",
		"!assets/js/*-TEST.js",
		"inc/*",
		"languages/*",
		"parts/*",
		"patterns/*",
		"pro/*",
		"src/*",
		"!*.sh",
		"styles/*",
		"!styles/*-test",
		"!*/*-TEST.json",
		"templates/*",
		"*.*",
		"!*.sh",
		"!.*",
		"!.DS_Store",
		"!flat-blocks-pro.zip"
  	],	
	"homepage": "https://xtremelysocial.com/wordpress/flat-blocks/",
	"scripts": {
		"start": "wp-scripts start --webpack-src-dir=src --output-path=assets/css",
		"build": "wp-scripts build --webpack-src-dir=src --output-path=assets/css",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"format:css": "npm run lint:css -- --fix",
		"format:js": "npm run lint:js -- --fix"
	},
	"devDependencies": {
		"@wordpress/scripts": "^30.7.0",
