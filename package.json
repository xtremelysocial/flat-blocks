		"webpack": "^5.93.0",
		"webpack-cli": "^5.1.4",
		"webpack-fix-style-only-entries": "^0.6.1",
		"webpack-remove-empty-scripts": "^1.0.4",
		"webpack-watched-glob-entries-plugin": "^3.0.0"
	},
	"dependencies": {
		"postcss": "^8.4.49",
		"postcss-cli": "^11.0.0",
		"remove-files-webpack-plugin": "^1.5.0",
		"style-loader": "^4.0.0"
	}
